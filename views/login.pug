extends layout.pug

block content
  form.form-signin(action='/login', method='post')
    h1.form-signin-heading Sign in
    |  
    label.sr-only(for='username') Email address
    |  
    input.form-control(type='email', name='username', placeholder='Email address', required='', autofocus='')
    |  
    label.sr-only(for='password') Password
    |  
    input.form-control(type='password', name='password', placeholder='Password', required='')
    |  
    input.btn.btn-md.btn-primary.btn-block(type='submit', value='Sign in')
  each alert in alerts
    .alert(class="#{alert.type}")=alert.message