extends layout.pug

block content
  form.form-signin(action='/register', method='post')
    h1.form-signin-heading Register
    |  
    label.sr-only(for='name') Email address
    |  
    input.form-control(type='email', name='email', placeholder='Email address', required='', autofocus='')
    |  
    label.sr-only(for='pass') Password
    |  
    input.form-control(type='password', name='password', placeholder='Password', required='')
    |  
    input.btn.btn-md.btn-primary.btn-block(type='submit', value='Register')